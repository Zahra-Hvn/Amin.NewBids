@using DataLayer;
@model User
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box" >
    <div class="content" style="width:50% ; ">
        <div class="row">
            <div class="col-md-8" style="width: -webkit-fill-available; box-shadow: 0px 0px 5px 1px;">
                <div class="card">
                    <div class="card-header">
                        <h3 class="title" style="text-align: -webkit-center;">ویرایش پروفایل</h3>
                        <br />
                        <hr />
                    </div>
                    <div class="card-body">
                        <form>                               
                            <div class="row">
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>نام کاربری :</label>
                                        <input type="text" class="form-control" disabled="" placeholder="Username" value="@Model.Email">
                                    </div>
                                </div>

                                    <div class="col-md-3 px-1">
                                        <div class="form-group">
                                            <label>رمز عبور :</label>
                                            <input type="text" class="form-control" placeholder="PassWord" name="Password" value="">
                                        </div>
                                    </div>
                                </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>نام :</label>
                                        <input type="text" class="form-control" placeholder="نام" value="@Model.Fname">
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label>نام خانوادگی :</label>
                                        <input type="text" class="form-control" placeholder="نام خانوادگی" value="@Model.Lname">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 px-1">
                                    <div class="form-group">
                                        <label>کشور :</label>
                                        <input type="text" class="form-control" placeholder="کشور" @*value="ایران"*@>
                                    </div>
                                </div>

                                <div class="col-md-4 pr-1">
                                    <div class="form-group">
                                        <label>شهر :</label>
                                        <input type="text" class="form-control" placeholder="شهر" @*value="تهران"*@>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-4 px-1">
                                    <div class="form-group">
                                        <label>تلفن تماس :</label>
                                        <input type="text" class="form-control" placeholder="98+" value="@Model.Mobile">
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">ایمیل :</label>
                                        <input type="email" class="form-control" placeholder="Email" value="@Model.Email">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label> ادرس :</label>
                                        <input type="text" class="form-control" placeholder="ادرس کامل" value="@Model.Address">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label> توضیحات :</label>
                                        <textarea rows="4" cols="80" class="form-control" placeholder="Here can be your description" value="توضیحات"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="box-footer" style="text-align: center;">
                                <button type="submit" id="btn_submit" class="btn btn-primary" style="width:14%;">ارسال</button>
                                <button type="reset" id="btn_submit" class="btn btn-primary" style="width:10%;" href="/Product/Details">لغو</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
