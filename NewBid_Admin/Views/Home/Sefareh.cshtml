@using Datalayer.ViewModels
@model vmMain
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">سفارشات</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                       
                        <th>نام کامل</th>

                        <th>نام کابری</th>
                        <th>محصول</th>
                        <th>تاریخ سفارش</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.getsefaresh)
                    {
                    <tr>
                       
                        <td>
                            @item.FullName
                        </td>
                        <td>
                            @item.userName
                        </td>
                        <td>
                            @item.ProductName
                        </td>
                        <td>
                            @(new Helpers().MiladiToShamsi( item.SubmitDate))
                        </td>
                        @*@using (Html.BeginForm("Deleteuser", "Home", FormMethod.Post, new { @id = "frm" + item.Id }))
        {*@
                        <td>
                            @using (Html.BeginForm("PayDetailes","Home",FormMethod.Post))
                            {
                            <input type="submit" name="name" value="مشاهده"  class="btn btn-success" /> 
                                <input type="hidden" name="id" value="@item.Id" />

                            }

                        </td>

                        @*}*@

                        @*<td> <a href="/Home/EditCate/@item.Id">ویرایش </a></td>*@
                    </tr>
                    }


                </tbody>
                <tfoot>
                    <tr></tr>
                </tfoot>
            </table>
            @*<div>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
                        دسته بندی جدید
                    </button>
                </div>*@
        </div>
        <!-- /.box-body -->
    </div>
</div>
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">دسته بندی جدید</h4>
            </div>
            @using (Html.BeginForm("AddCategory", "Home", FormMethod.Post))
            {
                <div class="modal-body">
                    <input type="text" class="form-control" name="CateTitle" value="" placeholder="عنوان دسته بندی" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">خروج</button>
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                </div>
            }

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.row (main row) -->

